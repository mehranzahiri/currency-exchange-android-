<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_application"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.paysera.currencyexchange.ui.fragment.IntroFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_converterFragment"
           app:popUpTo="@id/nav_graph_application"
            app:destination="@id/converterFragment" />
    </fragment>
    <fragment
        android:id="@+id/converterFragment"
        android:name="com.paysera.currencyexchange.ui.fragment.ConverterFragment"
        android:label="ConverterFragment" />

</navigation>